

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:background="#FFFCF2"
        android:transitionGroup="false"
        android:touchscreenBlocksFocus="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/dateView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/button_material_dark" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:id="@+id/imageView"
            android:adjustViewBounds="true"
            android:layout_below="@+id/dateView"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:src="@drawable/vstupai_min"
            android:baselineAlignBottom="false"
            android:nestedScrollingEnabled="false" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/gradient"
            android:layout_alignBottom="@id/imageView"

            android:layout_alignTop="@id/addressView"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Test Address"
            android:id="@+id/addressView"


            android:autoText="false"
            android:textColor="#fffffbf9"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/organizationView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Test Organization"
            android:id="@+id/organizationView"
            android:textColor="#ffffffff"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/priceView"
            android:layout_toStartOf="@+id/priceView"
            android:layout_above="@+id/nameView"
            android:autoText="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Тимбилдинг на природе"
            android:id="@+id/nameView"
            android:textColor="#ffffff"

            android:layout_alignBottom="@id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1111 test"
            android:id="@+id/priceView"
            android:textColor="#ff18a2a9"


            android:layout_below="@+id/addressView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />




    </RelativeLayout>

