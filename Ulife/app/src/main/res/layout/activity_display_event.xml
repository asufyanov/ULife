<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFCF2"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/dateView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/button_material_dark" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/imageView"
        android:background="@android:color/holo_blue_bright"
        android:adjustViewBounds="true"
        android:layout_below="@+id/dateView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="300dp"
        android:src="@android:color/holo_red_light" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/gradient"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/addressView"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Name"
        android:id="@+id/addressView"


        android:autoText="false"
        android:textColor="#fffffbf9"
        android:layout_above="@+id/organizationView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/organizationView"
        android:layout_toStartOf="@+id/organizationView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Test Organization"
        android:id="@+id/organizationView"
        android:textColor="#ffffffff"

        android:layout_above="@+id/priceView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1500 test"
        android:id="@+id/priceView"
        android:textColor="#ff18a2a9"
        android:layout_alignBottom="@+id/imageView"

        android:layout_alignRight="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Test Date"
        android:id="@+id/dayTimeView"
        android:layout_alignTop="@+id/organizationView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/priceView"
        android:textColor="#ffffffff"
        android:layout_toLeftOf="@+id/organizationView"
        android:layout_toStartOf="@+id/organizationView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Test Place"
        android:id="@+id/addressView"
        android:layout_alignTop="@+id/priceView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/organizationView"
        android:layout_toStartOf="@+id/organizationView"
        android:textColor="#ffffff" />

</RelativeLayout>
